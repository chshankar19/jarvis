{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Python: Flask",
        "type": "debugpy",
        "request": "launch",
        "program": "app.py",  // Replace with your app.py path
        "console": "integratedTerminal",
        "env": {
          "FLASK_APP": "app.py",
          "FLASK_ENV": "development"
        },
        "args": [
          "run",
          "--no-debugger",
          "--no-reload"
        ],
        "justMyCode": true
      }
    ]
  }
  